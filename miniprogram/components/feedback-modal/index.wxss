.mask { position: fixed; left:0; right:0; top:0; bottom:0; background: rgba(0,0,0,0.45); display:flex; align-items:center; justify-content:center; z-index: 999; }
.modal { width: 82%; background:#fff; border-radius: 20rpx; overflow:hidden; position: relative; box-shadow: 0 12rpx 36rpx rgba(0,0,0,0.12); }
.close { position:absolute; top: 12rpx; right: 12rpx; width: 48rpx; height: 48rpx; border-radius: 50%; background: rgba(0,0,0,0.04); display:flex; align-items:center; justify-content:center; font-size: 28rpx; color:#666; }
.content { padding: 48rpx 36rpx 28rpx; text-align:center; }
.emoji { font-size: 60rpx; }
.text { display:block; margin-top: 16rpx; font-size: 32rpx; color: #1F2937; }
.confetti { width: 100%; height: 180rpx; margin-top: 16rpx; }
.actions { padding: 0 32rpx 32rpx; }
.primary { width: 100%; height: 88rpx; line-height: 88rpx; border-radius: 14rpx; background: #FF6B6B; color:#fff; font-size: 32rpx; text-align: center; }
.primary::after { border: none; }
.primary:active { background: #FF5252; }

/* 新建习惯页样式 */

.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
}

.page-container {
  padding: 32rpx;
  min-height: 100vh;
}

/* 头部 */
.header {
  margin-bottom: 48rpx;
  padding: 24rpx 0;
}

.title {
  font-size: 48rpx;
  font-weight: 700;
  color: rgba(255, 255, 255, 0.98);
  margin-bottom: 16rpx;
  line-height: 1.2;
  text-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.15);
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.5;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 表单 */
.form {
  margin-bottom: 140rpx;
}

.form-item {
  margin-bottom: 48rpx;
  padding: 28rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  backdrop-filter: blur(20rpx);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08),
              0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid rgba(255, 255, 255, 0.4);
}

.form-label {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 20rpx;
  line-height: 1.2;
}

.form-input {
  width: 100%;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 16rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
  color: var(--text-primary);
  border: 2rpx solid rgba(102, 126, 234, 0.15);
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.form-input:focus {
  border-color: #667eea;
  background: white;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.2);
}

.form-hint {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-top: 12rpx;
  font-size: 24rpx;
  line-height: 1.4;
  color: var(--text-tertiary);
}

.char-count {
  color: var(--text-tertiary);
  margin-left: 16rpx;
  flex-shrink: 0;
}

/* 触发器选项 */
.trigger-options {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.trigger-btn {
  padding: 18rpx 32rpx;
  background: rgba(255, 255, 255, 0.7);
  border: 2rpx solid rgba(102, 126, 234, 0.2);
  border-radius: 999rpx;
  font-size: 28rpx;
  color: var(--text-secondary);
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.trigger-btn.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-color: transparent;
  color: white;
  box-shadow: 0 6rpx 20rpx rgba(102, 126, 234, 0.35);
  transform: translateY(-2rpx);
}

.trigger-btn:active {
  transform: scale(0.95);
}

.form-item .mt-sm {
  margin-top: 24rpx;
}

/* 频次选项 */
.frequency-options {
  display: flex;
  gap: 20rpx;
}

.frequency-btn {
  flex: 1;
  padding: 28rpx 16rpx;
  background: rgba(255, 255, 255, 0.7);
  border: 2rpx solid rgba(102, 126, 234, 0.2);
  border-radius: 20rpx;
  text-align: center;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.frequency-btn.active {
  background: rgba(102, 126, 234, 0.1);
  border-color: #667eea;
  box-shadow: 0 6rpx 20rpx rgba(102, 126, 234, 0.2);
  transform: translateY(-2rpx);
}

.frequency-main {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 6rpx;
  line-height: 1;
}

.frequency-btn.active .frequency-main {
  color: var(--primary-color);
}

.frequency-sub {
  font-size: 24rpx;
  color: var(--text-tertiary);
  line-height: 1.2;
}

.frequency-btn.active .frequency-sub {
  color: var(--primary-color);
}

/* 底部操作按钮 */
.footer-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-top: 1rpx solid rgba(102, 126, 234, 0.15);
  display: flex;
  gap: 20rpx;
  z-index: 100;
  box-shadow: 0 -4rpx 24rpx rgba(0, 0, 0, 0.08);
}

.footer-actions .btn {
  flex: 1;
  height: 88rpx;
  font-size: 32rpx;
  font-weight: 600;
}

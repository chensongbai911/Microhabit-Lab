/* 新建习惯页样式 */

.page-container {
  padding: 32rpx;
  min-height: 100vh;
  background: #fafbfc;
}

/* 头部 */
.header {
  margin-bottom: 40rpx;
}

.title {
  font-size: 44rpx;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 12rpx;
  line-height: 1.2;
}

.subtitle {
  font-size: 28rpx;
  color: var(--text-secondary);
  line-height: 1.4;
}

/* 表单 */
.form {
  margin-bottom: 140rpx;
}

.form-item {
  margin-bottom: 40rpx;
}

.form-label {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 16rpx;
  line-height: 1.2;
}

.form-input {
  width: 100%;
  height: 72rpx;
  background: white;
  border-radius: 16rpx;
  padding: 0 20rpx;
  font-size: 30rpx;
  color: var(--text-primary);
  border: 2rpx solid #e8e8e8;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.03);
}

.form-input:focus {
  border-color: var(--primary-color);
  box-shadow: 0 2rpx 12rpx rgba(76, 184, 165, 0.15);
}

.form-hint {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-top: 12rpx;
  font-size: 24rpx;
  line-height: 1.4;
  color: var(--text-tertiary);
}

.char-count {
  color: var(--text-tertiary);
  margin-left: 16rpx;
  flex-shrink: 0;
}

/* 触发器选项 */
.trigger-options {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.trigger-btn {
  padding: 16rpx 28rpx;
  background: white;
  border: 2rpx solid #e8e8e8;
  border-radius: 999rpx;
  font-size: 28rpx;
  color: var(--text-secondary);
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.03);
}

.trigger-btn.active {
  background: var(--primary-color);
  border-color: var(--primary-color);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(76, 184, 165, 0.25);
}

.trigger-btn:active {
  transform: scale(0.95);
}

/* 频次选项 */
.frequency-options {
  display: flex;
  gap: 16rpx;
}

.frequency-btn {
  flex: 1;
  padding: 24rpx 16rpx;
  background: white;
  border: 2rpx solid #e8e8e8;
  border-radius: 16rpx;
  text-align: center;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.03);
}

.frequency-btn.active {
  background: var(--primary-bg);
  border-color: var(--primary-color);
  box-shadow: 0 4rpx 12rpx rgba(76, 184, 165, 0.15);
}

.frequency-main {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 6rpx;
  line-height: 1;
}

.frequency-btn.active .frequency-main {
  color: var(--primary-color);
}

.frequency-sub {
  font-size: 24rpx;
  color: var(--text-tertiary);
  line-height: 1.2;
}

.frequency-btn.active .frequency-sub {
  color: var(--primary-color);
}

/* 底部操作按钮 */
.footer-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 32rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  background: white;
  border-top: 1rpx solid #e8e8e8;
  display: flex;
  gap: 16rpx;
  z-index: 100;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.footer-actions .btn {
  flex: 1;
}

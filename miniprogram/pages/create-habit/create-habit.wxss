/* 新建习惯页样式 */

.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
}

.page-container {
  padding: 32rpx;
  min-height: 100vh;
}

/* 头部 */
.header {
  margin-bottom: 48rpx;
  padding: 24rpx 0;
}

.title {
  font-size: 48rpx;
  font-weight: 700;
  color: rgba(255, 255, 255, 0.98);
  margin-bottom: 16rpx;
  line-height: 1.2;
  text-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.15);
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.5;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* Phase 1改进: 编辑模式的进度显示 */
.habit-status {
  display: flex;
  gap: 16rpx;
  margin-top: 16rpx;
}

.status-item {
  flex: 1;
  background: rgba(255, 255, 255, 0.25);
  backdrop-filter: blur(10rpx);
  border-radius: 12rpx;
  padding: 12rpx 16rpx;
  text-align: center;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.status-label {
  display: block;
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 4rpx;
}

.status-value {
  display: block;
  font-size: 28rpx;
  font-weight: 700;
  color: rgba(255, 255, 255, 0.98);
}

/* 表单 */
.form {
  margin-bottom: 140rpx;
}

.form-item {
  margin-bottom: 48rpx;
  padding: 28rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  backdrop-filter: blur(20rpx);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08),
              0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid rgba(255, 255, 255, 0.4);
}

.form-label {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 20rpx;
  line-height: 1.2;
}

.form-input {
  width: 100%;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 16rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
  color: var(--text-primary);
  border: 2rpx solid rgba(102, 126, 234, 0.15);
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.form-input:focus {
  border-color: #667eea;
  background: white;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.2);
}

.form-hint {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-top: 12rpx;
  font-size: 24rpx;
  line-height: 1.4;
  color: var(--text-tertiary);
}

.char-count {
  color: var(--text-tertiary);
  margin-left: 16rpx;
  flex-shrink: 0;
}

/* 触发器选项 */
.trigger-options {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.trigger-btn {
  padding: 18rpx 32rpx;
  background: rgba(255, 255, 255, 0.7);
  border: 2rpx solid rgba(102, 126, 234, 0.2);
  border-radius: 999rpx;
  font-size: 28rpx;
  color: var(--text-secondary);
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.trigger-btn.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-color: transparent;
  color: white;
  box-shadow: 0 6rpx 20rpx rgba(102, 126, 234, 0.35);
  transform: translateY(-2rpx);
}

.trigger-btn:active {
  transform: scale(0.95);
}

.form-item .mt-sm {
  margin-top: 24rpx;
}

/* 频次选项 */
.frequency-options {
  display: flex;
  gap: 20rpx;
}

.frequency-btn {
  flex: 1;
  padding: 28rpx 16rpx;
  background: rgba(255, 255, 255, 0.7);
  border: 2rpx solid rgba(102, 126, 234, 0.2);
  border-radius: 20rpx;
  text-align: center;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.frequency-btn.active {
  background: rgba(102, 126, 234, 0.1);
  border-color: #667eea;
  box-shadow: 0 6rpx 20rpx rgba(102, 126, 234, 0.2);
  transform: translateY(-2rpx);
}

.frequency-main {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 6rpx;
  line-height: 1;
}

.frequency-btn.active .frequency-main {
  color: var(--primary-color);
}

.frequency-sub {
  font-size: 24rpx;
  color: var(--text-tertiary);
  line-height: 1.2;
}

.frequency-btn.active .frequency-sub {
  color: var(--primary-color);
}

/* P0-1: 频次警告样式 */
.frequency-warning {
  margin-top: 20rpx;
  padding: 16rpx 20rpx;
  background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
  border: 1rpx solid #fcd34d;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.frequency-warning .warning-icon {
  font-size: 28rpx;
  line-height: 1;
}

.frequency-warning .warning-text {
  font-size: 26rpx;
  color: #92400e;
  font-weight: 500;
  line-height: 1.4;
}

/* Phase 2新增: 频次影响说明 */
.frequency-impact {
  margin-top: 24rpx;
  padding: 16rpx;
  background: rgba(102, 126, 234, 0.08);
  border-radius: 12rpx;
  border-left: 4rpx solid #667eea;
}

.impact-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.impact-label {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

.impact-value {
  font-size: 32rpx;
  color: #667eea;
  font-weight: 700;
}

.impact-tips {
  display: block;
  font-size: 24rpx;
  color: #667eea;
  opacity: 0.8;
}
/* 底部操作按钮 */
.footer-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-top: 1rpx solid rgba(102, 126, 234, 0.15);
  display: flex;
  gap: 20rpx;
  z-index: 100;
  box-shadow: 0 -4rpx 24rpx rgba(0, 0, 0, 0.08);
}

.footer-actions .btn {
  flex: 1;
  height: 88rpx;
  font-size: 32rpx;
  font-weight: 600;
}

/* P0-2: 底部安抚提示 */
.footer-hint {
  position: fixed;
  bottom: 120rpx;
  left: 0;
  right: 0;
  text-align: center;
  padding: 0 32rpx;
  padding-bottom: env(safe-area-inset-bottom);
  z-index: 99;
}

.footer-hint .hint-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.85);
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
  background: rgba(0, 0, 0, 0.3);
  backdrop-filter: blur(10rpx);
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  display: inline-block;
}

/* Phase 2新增: 推荐提示 */
.recommendation-hint {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-top: 12rpx;
  padding: 12rpx 16rpx;
  background: rgba(102, 126, 234, 0.08);
  border-radius: 8rpx;
  border-left: 4rpx solid #667eea;
}

.hint-icon {
  font-size: 20rpx;
  min-width: 20rpx;
}

.hint-text {
  font-size: 24rpx;
  color: #667eea;
  line-height: 1.4;
}

.hint-text strong {
  font-weight: 600;
}

/* Phase 2新增: 表单反馈 */
.form-feedback {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 8rpx;
  font-size: 24rpx;
}

.char-count {
  color: var(--text-tertiary);
}

.feedback-status {
  color: #667eea;
  font-weight: 500;
}

/* Phase 2新增: 触发器分类选择 */
.trigger-categories {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.category-tag {
  display: flex;
  align-items: center;
  gap: 6rpx;
  padding: 8rpx 16rpx;
  background-color: rgba(102, 126, 234, 0.08);
  border-radius: 20rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
  opacity: 0.7;
}

.category-tag.active {
  background-color: rgba(255, 107, 157, 0.2);
  border: 2rpx solid #FF6B9D;
  opacity: 1;
}

.category-icon {
  font-size: 20rpx;
}

.category-name {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
}

.category-tag.active .category-name {
  color: #FF6B9D;
}

/* Phase 2新增: 触发器列表 */
.trigger-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.trigger-option {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 16rpx;
  background-color: rgba(102, 126, 234, 0.05);
  border-radius: 12rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
  position: relative;
}

.trigger-option:active {
  transform: scale(0.98);
}

.trigger-option.selected {
  background-color: rgba(255, 107, 157, 0.1);
  border: 2rpx solid #FF6B9D;
}

.trigger-icon {
  font-size: 28rpx;
  min-width: 28rpx;
}

.trigger-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.trigger-label {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.trigger-time {
  font-size: 20rpx;
  color: var(--text-tertiary);
  margin-top: 4rpx;
}

.trigger-checkmark {
  font-size: 24rpx;
  color: #FF6B9D;
  font-weight: bold;
}

/* Phase 2新增: 触发器完成率数据 */
.trigger-stats {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
  min-width: 50rpx;
}

.stat-completion {
  font-size: 26rpx;
  color: #667eea;
  font-weight: 700;
}

.stat-label {
  font-size: 18rpx;
  color: #999;
}

/* Phase 2新增: 自定义触发器 */
.custom-trigger {
  margin-top: 16rpx;
}

.custom-trigger .form-input {
  padding: 12rpx 16rpx;
  height: 72rpx;
}

/* Phase 3新增: 影响分析警告 */
.impact-analysis {
  margin-top: 24rpx;
  padding: 16rpx;
  background-color: rgba(255, 255, 255, 0.95);
  border-radius: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  animation: slideIn 0.3s ease-out;
}

@keyframes slideIn {
  from {
    opacity: 0;
    transform: translateY(-8rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.impact-header {
  margin-bottom: 12rpx;
}

.impact-severity {
  display: inline-flex;
  align-items: center;
  gap: 6rpx;
  padding: 6rpx 12rpx;
  border-radius: 6rpx;
  font-size: 24rpx;
  font-weight: 600;
  transition: all 0.2s ease;
}

.impact-severity.info {
  color: #4FC3F7;
  background-color: rgba(79, 195, 247, 0.1);
}

.impact-severity.warning {
  color: #FFA726;
  background-color: rgba(255, 167, 38, 0.1);
}

.impact-severity.danger {
  color: #EF5350;
  background-color: rgba(239, 83, 80, 0.1);
}

.impact-message {
  display: block;
  font-size: 26rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.impact-list {
  margin-bottom: 12rpx;
  padding-left: 8rpx;
}

.impact-item-small {
  display: flex;
  align-items: flex-start;
  gap: 8rpx;
  margin-bottom: 8rpx;
  font-size: 24rpx;
}

.impact-bullet {
  color: #999;
  flex-shrink: 0;
  margin-top: 2rpx;
}

.impact-detail {
  color: #666;
  flex: 1;
  line-height: 1.5;
}

.impact-recommendation {
  display: block;
  padding: 8rpx 12rpx;
  background-color: #FFF3E0;
  border-radius: 6rpx;
  color: #E65100;
  font-size: 24rpx;
  line-height: 1.5;
  border-left: 3rpx solid #FFA726;
}


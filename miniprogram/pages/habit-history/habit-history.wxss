/* 习惯变更历史页面样式 */

.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
  padding: 24rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 400rpx;
  color: rgba(255, 255, 255, 0.9);
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.empty-hint {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}

/* 变更列表 */
.change-list {
  padding: 16rpx 0;
}

.timeline {
  position: relative;
  padding: 16rpx 0;
}

.timeline::before {
  content: '';
  position: absolute;
  left: 32rpx;
  top: 0;
  bottom: 0;
  width: 2rpx;
  background: linear-gradient(180deg, rgba(255, 255, 255, 0.5) 0%, rgba(255, 255, 255, 0.1) 100%);
}

/* 变更项 */
.change-item {
  display: flex;
  gap: 20rpx;
  margin-bottom: 24rpx;
  position: relative;
}

/* 时间线点 */
.timeline-dot {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.95);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  font-size: 28rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  border: 3rpx solid rgba(255, 107, 157, 0.8);
  position: relative;
  z-index: 10;
}

.timeline-dot.undo {
  background: rgba(255, 255, 255, 0.95);
  border-color: #FFB6C1;
}

.timeline-dot.field {
  background: rgba(255, 255, 255, 0.95);
  border-color: #4FC3F7;
}

/* 卡片 */
.timeline-card {
  flex: 1;
  background: rgba(255, 255, 255, 0.98);
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  cursor: pointer;
  transition: all 0.3s ease;
}

.timeline-card:active {
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.15);
}

/* 卡片头 */
.change-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.field-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.change-time {
  font-size: 22rpx;
  color: #999;
}

/* 值预览 */
.value-preview {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 12rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  margin-bottom: 12rpx;
  font-size: 24rpx;
}

.value-old {
  color: #999;
  text-decoration: line-through;
  flex: 1;
  word-break: break-all;
}

.arrow {
  color: #ccc;
  font-weight: bold;
  margin: 0 8rpx;
}

.value-new {
  color: #667eea;
  font-weight: 600;
  flex: 1;
  word-break: break-all;
}

/* 详细内容 */
.details {
  margin-top: 12rpx;
  padding-top: 12rpx;
  border-top: 1rpx solid #eee;
}

.detail-row {
  display: flex;
  gap: 12rpx;
  margin-bottom: 12rpx;
  line-height: 1.6;
}

.detail-row .label {
  min-width: 80rpx;
  font-weight: 600;
  color: #667eea;
  font-size: 24rpx;
}

.detail-row .value {
  flex: 1;
  color: #333;
  font-size: 24rpx;
  word-break: break-all;
  background: #f9f9f9;
  padding: 8rpx 12rpx;
  border-radius: 6rpx;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 12rpx;
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #eee;
}

.btn-restore {
  flex: 1;
  padding: 12rpx 16rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 8rpx;
  font-size: 24rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.btn-restore:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

/* 展开指示 */
.expand-indicator {
  text-align: center;
  margin-top: 12rpx;
  color: #ccc;
  font-size: 20rpx;
}

.expand-indicator .icon {
  display: inline-block;
  transition: transform 0.3s ease;
}

.expand-indicator .icon.expanded {
  transform: rotate(180deg);
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 400rpx;
  color: rgba(255, 255, 255, 0.9);
}

.spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top-color: white;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

/* 今日习惯页样式 - 年轻化设计 */

.container {
  min-height: 100vh;
  padding-bottom: 160rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
  background-attachment: fixed;
}

/* 顶部区域 - 玻璃态设计 */
.header {
  padding: 48rpx 32rpx 32rpx;
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  border-bottom: 2rpx solid rgba(255, 255, 255, 0.2);
  margin-bottom: 20rpx;
}

.header-top {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.date {
  font-size: 40rpx;
  font-weight: 700;
  color: #FFFFFF;
  margin-bottom: 16rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.encouragement {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.5;
  font-weight: 500;
}

.header-stats {
  text-align: right;
}

.stat-item {
  background: rgba(255, 255, 255, 0.25);
  backdrop-filter: blur(10rpx);
  border-radius: 16rpx;
  padding: 16rpx 24rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.stat-label {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 4rpx;
  font-weight: 500;
}

.stat-value {
  font-size: 36rpx;
  font-weight: 700;
  color: #FFFFFF;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

/* 完成度进度条 - 发光效果 */
.progress-bar {
  width: 100%;
  height: 8rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 4rpx;
  overflow: hidden;
  box-shadow: inset 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #10B981 0%, #34D399 100%);
  border-radius: 4rpx;
  transition: width 0.3s ease;
  box-shadow: 0 0 10rpx rgba(16, 185, 129, 0.5);
}

/* 习惯列表 */
.habits-container {
  padding: 0 32rpx;
  position: relative;
}

.habit-card-wrapper {
  position: relative;
  overflow: visible;
  margin-bottom: 24rpx;
}

.habit-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 28rpx;
  padding: 28rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.12);
  border: 2rpx solid rgba(255, 255, 255, 0.6);
  transition: all 0.3s cubic-bezier(0.68, -0.55, 0.265, 1.55);
  position: relative;
  z-index: 10;
  overflow: hidden;
}

/* 卡片悬浮动效 */
.habit-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
  opacity: 0;
  transition: opacity 0.3s ease;
  pointer-events: none;
}

.habit-card:active:not(.editing) {
  transform: scale(0.97) translateY(4rpx);
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.16);
}

.habit-card:active:not(.editing)::before {
  opacity: 1;
}

/* 卡片编辑状态 - 显示菜单时左移 */
.habit-card.editing {
  transform: translateX(-160rpx);
}

.habit-main {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

/* 左侧完成图标 */
.check-icon {
  width: 52rpx;
  height: 52rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.check-icon image {
  width: 100%;
  height: 100%;
}

.check-placeholder {
  width: 52rpx;
  height: 52rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

/* 中间习惯信息 */
.habit-info {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.habit-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 8rpx;
  gap: 12rpx;
}

.habit-name {
  font-size: 32rpx;
  font-weight: 500;
  color: var(--text-primary);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height: 1.2;
  flex: 1;
}

.habit-name.completed {
  color: var(--text-tertiary);
  text-decoration: line-through;
}

.habit-period {
  font-size: 22rpx;
  font-weight: 700;
  color: #FFFFFF;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 6rpx 14rpx;
  border-radius: 14rpx;
  white-space: nowrap;
  flex-shrink: 0;
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.3);
}

.habit-meta {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.trigger-tag {
  font-size: 24rpx;
  padding: 8rpx 14rpx;
  border-radius: 10rpx;
  background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
  color: #8B4513;
  font-weight: 600;
  box-shadow: 0 2rpx 6rpx rgba(252, 182, 159, 0.3);
}

.progress-text {
  font-size: 24rpx;
  color: #6B7280;
  font-weight: 600;
}

/* 习惯进度条 - 彩色渐变 */
.habit-progress-bar {
  width: 100%;
  height: 6rpx;
  background: rgba(102, 126, 234, 0.1);
  border-radius: 3rpx;
  overflow: hidden;
}

.habit-progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
  border-radius: 3rpx;
  transition: width 0.3s ease;
  box-shadow: 0 0 8rpx rgba(102, 126, 234, 0.4);
}

/* 右侧打卡按钮 - 发光效果 */
.check-in-btn {
  width: 76rpx;
  height: 76rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 24rpx;
  transition: all 0.2s;
  flex-shrink: 0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.4);
}

.check-in-btn image {
  width: 80%;
  height: 80%;
  border-radius: 50%;
  filter: brightness(0) invert(1);
}

.check-in-btn:active:not(.disabled) {
  transform: scale(0.85);
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.6);
}

.check-in-btn.disabled {
  opacity: 0.6;
  background: linear-gradient(135deg, #9CA3AF 0%, #6B7280 100%);
  box-shadow: none;
}

.check-in-btn.loading {
  opacity: 0.8;
}

.btn-spinner {
  width: 32rpx;
  height: 32rpx;
  border: 3rpx solid rgba(255, 255, 255, 0.3);
  border-top-color: #FFFFFF;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

/* 全部完成提示 - 玻璃态设计 */
.completed-banner {
  background: linear-gradient(135deg, #10B981 0%, #34D399 100%);
  color: white;
  padding: 24rpx 32rpx;
  margin: 16rpx 32rpx 0;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
  animation: slideDown 0.3s ease;
  position: relative;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(16, 185, 129, 0.3),
              0 4rpx 16rpx rgba(16, 185, 129, 0.2);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.completed-icon {
  font-size: 40rpx;
  animation: bounce 0.5s ease;
}

@keyframes bounce {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-8rpx); }
}

.completed-text {
  font-size: 30rpx;
  font-weight: 600;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 粒子特效容器 */
.confetti-container {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  overflow: hidden;
  pointer-events: none;
}

.confetti {
  position: absolute;
  width: 8rpx;
  height: 8rpx;
  background: white;
  border-radius: 50%;
  opacity: 0.9;
  animation: confetti-fall 2s ease-in forwards;
}

/* 为每个粒子设置不同的动画延迟和初始位置 */
.confetti:nth-child(1) {
  left: 10%;
  animation-delay: 0s;
  background: #FFD700;
}

.confetti:nth-child(2) {
  left: 15%;
  animation-delay: 0.1s;
  background: #FF6B9D;
}

.confetti:nth-child(3) {
  left: 30%;
  animation-delay: 0.2s;
  background: #4ECDC4;
}

.confetti:nth-child(4) {
  left: 45%;
  animation-delay: 0.3s;
  background: #FFD700;
}

.confetti:nth-child(5) {
  left: 60%;
  animation-delay: 0.1s;
  background: #FF6B9D;
}

.confetti:nth-child(6) {
  left: 75%;
  animation-delay: 0.2s;
  background: #4ECDC4;
}

.confetti:nth-child(7) {
  left: 85%;
  animation-delay: 0.15s;
  background: #FFD700;
}

.confetti:nth-child(8) {
  left: 90%;
  animation-delay: 0.25s;
  background: #FF6B9D;
}

/* 粒子下落动画 */
@keyframes confetti-fall {
  0% {
    transform: translateY(-40rpx) rotate(0deg) scale(1);
    opacity: 0.9;
  }
  50% {
    transform: translateY(20rpx) rotate(180deg) scale(0.8);
    opacity: 0.7;
  }
  100% {
    transform: translateY(80rpx) rotate(360deg) scale(0.5);
    opacity: 0;
  }
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 加载状态 - 玻璃态设计 */
.loading-state {
  padding: 120rpx 32rpx;
  text-align: center;
}

.spinner {
  width: 48rpx;
  height: 48rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.2);
  border-top-color: #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto 24rpx;
  box-shadow: 0 0 20rpx rgba(102, 126, 234, 0.3);
}

.loading-state text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.loading-text {
  font-size: 28rpx;
  color: var(--text-secondary);
}

/* 错误状态 - 玻璃态设计 */
.error-state {
  padding: 80rpx 32rpx;
  text-align: center;
}

.error-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  animation: shake 0.5s ease;
}

@keyframes shake {
  0%, 100% { transform: translateX(0); }
  25% { transform: translateX(-10rpx); }
  75% { transform: translateX(10rpx); }
}

.error-title {
  font-size: 34rpx;
  font-weight: 600;
  color: rgba(255, 255, 255, 0.95);
  margin-bottom: 12rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.error-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 32rpx;
}

/* 空状态 - 玻璃态设计 */
.empty-state {
  padding: 100rpx 32rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.9;
  animation: float 3s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-12rpx); }
}

.empty-title {
  font-size: 34rpx;
  font-weight: 600;
  color: rgba(255, 255, 255, 0.95);
  margin-bottom: 12rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.empty-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 32rpx;
}

.empty-sub {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.7);
  margin-bottom: 48rpx;
  line-height: 1.6;
}

/* 周期结束弹窗 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.modal-content {
  width: 600rpx;
  background: white;
  border-radius: 32rpx;
  padding: 48rpx 32rpx;
  margin: 0 32rpx;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-primary);
  text-align: center;
  margin-bottom: 16rpx;
}

.modal-habit-name {
  font-size: 28rpx;
  color: var(--primary-color);
  text-align: center;
  margin-bottom: 24rpx;
}

.modal-text {
  font-size: 28rpx;
  color: var(--text-secondary);
  line-height: 1.6;
  text-align: center;
  margin-bottom: 48rpx;
}

.modal-text .highlight {
  color: var(--primary-color);
  font-weight: 600;
}

.modal-actions {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

/* 悬浮新建按钮 - 渐变发光设计 */
.fab {
  position: fixed;
  right: 32rpx;
  bottom: 120rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  box-shadow: 0 12rpx 32rpx rgba(102, 126, 234, 0.4),
              0 6rpx 16rpx rgba(102, 126, 234, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  z-index: 100;
  border: 2rpx solid rgba(255, 255, 255, 0.2);
}

.fab::before {
  content: '';
  position: absolute;
  inset: -4rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  opacity: 0;
  transition: opacity 0.3s;
  z-index: -1;
  filter: blur(12rpx);
}

.fab:active::before {
  opacity: 0.6;
}

.fab image {
  width: 56rpx;
  height: 56rpx;
  filter: brightness(0) invert(1);
}

.fab:active {
  transform: scale(0.9);
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.5),
              0 4rpx 12rpx rgba(102, 126, 234, 0.4);
}

/* 习惯卡片滑动菜单 */
.habit-actions {
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  display: flex;
  gap: 12rpx;
  z-index: 9;
  width: 160rpx;
  height: 100%;
}

.action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 16rpx;
  font-size: 24rpx;
  font-weight: 600;
  color: white;
  transition: all 0.2s;
}

.action-btn:active {
  transform: scale(0.95);
}

.action-edit {
  background: linear-gradient(135deg, #3B82F6 0%, #1D4ED8 100%);
}

.action-delete {
  background: linear-gradient(135deg, #EF4444 0%, #DC2626 100%);
}

/* 长按菜单背景遮罩 */
.menu-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 8;
}

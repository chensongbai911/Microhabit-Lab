/* === ҳ������ === */
.container {
  min-height: 100vh;
  background-color: #F5F5F5;
  padding-bottom: 120rpx;
}

/* === ���������� === */
.hero-section {
  padding: 64rpx 32rpx 48rpx;
  background-color: #FFFFFF;
  display: flex !important;
  flex-direction: column !important;
  align-items: center !important;
  justify-content: center !important;
  text-align: center !important;
}

.hero-title {
  font-size: 48rpx;
  font-weight: 600;
  color: #000000;
  margin-bottom: 16rpx;
  line-height: 1.3;
  text-align: center;
}

.hero-subtitle {
  font-size: 28rpx;
  color: #999999;
  line-height: 1.5;
  text-align: center;
  max-width: 600rpx;
}

/* === ϰ���б� === */
.habits-list {
  padding: 24rpx 32rpx;
}

.habit-card {
  position: relative;
  display: flex;
  align-items: flex-start;
  padding: 32rpx 24rpx;
  margin-bottom: 24rpx;
  background-color: #FFFFFF;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid #f0f0f0;
}

.habit-card.is-completed {
  background: linear-gradient(135deg, #f2fbf5 0%, #e7f8ed 100%);
  border: 1rpx solid #b7e4c7;
  box-shadow: 0 4rpx 20rpx rgba(7, 193, 96, 0.12);
}

/* === ���״̬ԲȦ === */
.habit-check {
  flex-shrink: 0;
  margin-right: 24rpx;
  padding-top: 4rpx;
}

.check-circle {
  width: 48rpx;
  height: 48rpx;
  border: 3rpx solid #E5E5E5;
  border-radius: 50%;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  transition: all 0.3s ease;
}

.check-circle.checked {
  background-color: #07C160;
  border-color: #07C160;
}

.check-icon {
  width: 28rpx;
  height: 28rpx;
}

.check-text {
  font-size: 32rpx;
  color: #FFFFFF;
  font-weight: 600;
  line-height: 1;
}

/* === ϰ������ === */
.habit-content {
  flex: 1;
  min-width: 0;
}

.habit-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #000000;
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.habit-progress {
  font-size: 24rpx;
  color: #8c8c8c;
  margin-bottom: 16rpx;
}

/* === ������ === */
.progress-bar {
  width: 100%;
  height: 8rpx;
  background-color: #EDEDED;
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 16rpx;
}

.progress-fill {
  height: 100%;
  background-color: #07C160;
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.progress-fill.completed {
  background-color: #07C160;
}

.habit-card.is-completed .progress-bar {
  background-color: rgba(7, 193, 96, 0.15);
}

.habit-card.is-completed .progress-fill {
  background-color: #07C160;
}

/* === ��ǩ������� === */
.habit-meta {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12rpx;
}

.habit-tags {
  display: flex;
  gap: 12rpx;
}

.tag {
  padding: 6rpx 16rpx;
  font-size: 22rpx;
  border-radius: 6rpx;
  line-height: 1;
}

.tag-trigger {
  background-color: #FFF3E0;
  color: #FF9800;
}

.tag-category {
  background-color: #E3F2FD;
  color: #2196F3;
}

.habit-completion {
  font-size: 24rpx;
  color: #999999;
}

.habit-completion.completed {
  color: #07C160;
  font-weight: 500;
}

.undo-btn {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  padding: 4rpx 12rpx;
  font-size: 18rpx;
  line-height: 1.1;
  background-color: #fff7f7;
  color: #b02a37;
  border: 1rpx solid #f1b0b7;
  border-radius: 10rpx;
  box-shadow: none;
  display: inline-flex;
  align-items: center;
  justify-content: center;
}

.habit-card.is-completed .habit-name {
  color: #0f5132;
}

.habit-card.is-completed .habit-progress {
  color: #3c7a56;
}

/* === ��ɻ��� === */
.completion-badge {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  padding: 8rpx 16rpx;
  background-color: #07C160;
  border-radius: 8rpx;
  display: flex !important;
  justify-content: center !important;
}

.badge-text {
  font-size: 22rpx;
  color: #FFFFFF;
  font-weight: 500;
}

/* === ��״̬ === */
.empty-state {
  display: flex !important;
  flex-direction: column !important;
  align-items: center !important;
  justify-content: center !important;
  padding: 120rpx 64rpx;
  text-align: center !important;
  min-height: 400rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  line-height: 1;
}

.empty-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #000000;
  margin-bottom: 16rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 48rpx;
}

/* === ����״̬ === */
.loading-state {
  display: flex !important;
  flex-direction: column !important;
  align-items: center !important;
  justify-content: center !important;
  padding: 120rpx 64rpx;
  text-align: center !important;
  min-height: 400rpx;
}

.spinner {
  width: 64rpx;
  height: 64rpx;
  border: 4rpx solid #EDEDED;
  border-top-color: #07C160;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 24rpx;
  font-size: 28rpx;
  color: #999999;
}

/* === ����״̬ === */
.error-state {
  display: flex !important;
  flex-direction: column !important;
  align-items: center !important;
  justify-content: center !important;
  padding: 120rpx 64rpx;
  text-align: center !important;
  min-height: 400rpx;
}

.error-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  line-height: 1;
}

.error-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #000000;
  margin-bottom: 16rpx;
}

.error-text {
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 48rpx;
}

/* === ��ť��ʽ === */
.btn {
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  border-radius: 12rpx;
  border: none;
  transition: all 0.3s ease;
}

.btn-primary {
  background-color: #07C160;
  color: #FFFFFF;
}

.btn-primary:active {
  opacity: 0.8;
}

/* === Toast ��ʾ === */
.toast {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%) scale(0.8);
  padding: 24rpx 48rpx;
  background-color: rgba(0, 0, 0, 0.75);
  border-radius: 12rpx;
  opacity: 0;
  transition: all 0.3s ease;
  pointer-events: none;
  z-index: 1000;
}

.toast.show {
  opacity: 1;
  transform: translate(-50%, -50%) scale(1);
}

.toast-text {
  font-size: 28rpx;
  color: #FFFFFF;
  text-align: center;
}

/* === �ײ�������ť === */
.fab {
  position: fixed;
  right: 32rpx;
  bottom: 160rpx;
  width: 112rpx;
  height: 112rpx;
  background-color: #07C160;
  border-radius: 50%;
  box-shadow: 0 8rpx 24rpx rgba(7, 193, 96, 0.3);
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  transition: all 0.3s ease;
  z-index: 100;
}

.fab:active {
  transform: scale(0.95);
}

.fab-text {
  font-size: 72rpx;
  color: #FFFFFF;
  font-weight: 300;
  line-height: 1;
  height: 96rpx;
}

/* === 激励区域 === */
.encouragement-section {
  padding: 24rpx 32rpx;
}

.encouragement-card {
  background: linear-gradient(135deg, #07C160 0%, #2AD47D 100%);
  border-radius: 16rpx;
  padding: 32rpx 24rpx;
  display: flex !important;
  flex-direction: column !important;
  align-items: center !important;
  justify-content: center !important;
  text-align: center !important;
  box-shadow: 0 4rpx 16rpx rgba(7, 193, 96, 0.15);
}

.encouragement-icon {
  font-size: 80rpx;
  margin-bottom: 16rpx;
  line-height: 1 !important;
}

.encouragement-text {
  font-size: 32rpx;
  font-weight: 500;
  color: #FFFFFF;
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.encouragement-progress {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 16rpx;
}

.encouragement-bar {
  width: 100%;
  height: 8rpx;
  background-color: rgba(255, 255, 255, 0.3);
  border-radius: 4rpx;
  overflow: hidden;
}

.encouragement-fill {
  height: 100%;
  background-color: #FFFFFF;
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

/* 首次长按提示 */
.longpress-hint {
  margin: 12rpx 32rpx;
  padding: 12rpx 18rpx;
  background-color: rgba(0,0,0,0.75);
  color: #FFFFFF;
  border-radius: 12rpx;
  font-size: 24rpx;
  text-align: center;
}

/* === 周期结束弹窗样式 === */
.cycle-end-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1200;
  display: flex !important;
  align-items: flex-end !important;
  justify-content: center !important;
}

.modal-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.45);
}

.modal-content {
  position: relative;
  width: 100%;
  max-height: 80%;
  background: #FFFFFF;
  border-radius: 24rpx 24rpx 0 0;
  padding: 36rpx 28rpx 48rpx;
  box-shadow: 0 -8rpx 40rpx rgba(0,0,0,0.12);
  animation: slideUp 260ms ease-out;
}

.modal-header { text-align: center; margin-bottom: 12rpx; }
.modal-emoji { font-size: 56rpx; display: block; margin-bottom: 8rpx; }
.modal-title { font-size: 30rpx; font-weight: 700; color: #222; }

.modal-body { text-align: center; margin-bottom: 18rpx; }
.habit-name { font-size: 26rpx; font-weight: 600; color: #111; margin-bottom: 8rpx; }
.habit-stats { display: flex; justify-content: center; align-items: baseline; gap: 12rpx; margin-bottom: 8rpx; }
.stat-label { color: #999; font-size: 22rpx; }
.stat-value { color: #07C160; font-size: 28rpx; font-weight: 700; }
.modal-text { color: #666; font-size: 22rpx; line-height: 1.6; }

.modal-buttons { display: flex; flex-direction: column; gap: 12rpx; margin-top: 8rpx; }
.btn { padding: 18rpx; border-radius: 12rpx; font-size: 28rpx; border: none; }
.btn-primary { background: #07C160; color: #fff; }
.btn-secondary { background: #FAAD14; color: #fff; }
.btn-ghost { background: #F6F6F6; color: #333; }

@keyframes slideUp { from { transform: translateY(24rpx); opacity: 0 } to { transform: translateY(0); opacity: 1 } }


/* P0: 周期计时器卡片样式 */
.cycle-timer-card {
  margin: 24rpx 32rpx 32rpx;
  padding: 32rpx;
  background: linear-gradient(135deg, #07C160 0%, #2AD47D 100%);
  border-radius: 24rpx;
  box-shadow: 0 4rpx 24rpx rgba(7, 193, 96, 0.2);
  color: white;
  overflow: hidden;
  position: relative;
}

/* 背景装饰 */
.cycle-timer-card::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -50%;
  width: 400rpx;
  height: 400rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  pointer-events: none;
}

.cycle-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
  position: relative;
  z-index: 1;
}

.cycle-title {
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.cycle-badge {
  background: #FFD700;
  color: #059048;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 600;
  animation: pulse 1s infinite;
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.05);
  }
}

/* 周期主显示 */
.cycle-main {
  display: flex;
  align-items: center;
  gap: 32rpx;
  margin-bottom: 28rpx;
  position: relative;
  z-index: 1;
}

.cycle-number {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
}

.current-day {
  font-size: 72rpx;
  font-weight: 700;
  line-height: 1;
}

.total-day {
  font-size: 32rpx;
  font-weight: 400;
  opacity: 0.9;
}

/* 周期进度条 */
.cycle-progress-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.cycle-progress-bar {
  width: 100%;
  height: 12rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 6rpx;
  overflow: hidden;
}

.cycle-progress-fill {
  height: 100%;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 6rpx;
  transition: width 0.4s cubic-bezier(0.23, 1, 0.320, 1);
}

.cycle-percentage {
  font-size: 28rpx;
  font-weight: 600;
  text-align: right;
}

/* 周期状态文案 */
.cycle-status-text {
  font-size: 28rpx;
  margin-bottom: 28rpx;
  line-height: 1.5;
  padding: 16rpx 20rpx;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 12rpx;
  position: relative;
  z-index: 1;
}

.cycle-status-text view {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

/* 周期详情数据 */
.cycle-details {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
  position: relative;
  z-index: 1;
}

.detail-item {
  background: rgba(255, 255, 255, 0.15);
  padding: 16rpx;
  border-radius: 16rpx;
  text-align: center;
  backdrop-filter: blur(10px);
}

.detail-label {
  font-size: 22rpx;
  opacity: 0.85;
  margin-bottom: 8rpx;
  display: block;
}

.detail-value {
  font-size: 36rpx;
  font-weight: 700;
  display: block;
}

/* 响应式调整 */
@media (max-width: 375px) {
  .cycle-main {
    gap: 20rpx;
  }

  .current-day {
    font-size: 56rpx;
  }

  .cycle-title {
    font-size: 28rpx;
  }

  .detail-value {
    font-size: 28rpx;
  }
}


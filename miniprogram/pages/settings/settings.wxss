.container {
  min-height: 100vh;
  background: var(--bg-color);
}

.page-container {
  padding: 32rpx;
}

/* 区块标题 */
.section-header {
  margin-bottom: 24rpx;
  margin-top: 40rpx;
}

.section-header:first-child {
  margin-top: 0;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.section-desc {
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* 设置卡片 */
.setting-card {
  background: #fff;
  border-radius: var(--radius-lg);
  padding: 0 32rpx;
  box-shadow: var(--shadow-card);
  border: 2rpx solid var(--border-light);
}

.setting-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 0;
}

.setting-label {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.label-text {
  font-size: 28rpx;
  color: var(--text-primary);
  font-weight: 500;
}

.label-hint {
  font-size: 24rpx;
  color: var(--text-tertiary);
}

.arrow {
  font-size: 32rpx;
  color: var(--text-secondary);
  margin-left: 16rpx;
}

.time-picker {
  padding: 12rpx 24rpx;
  background: var(--bg-secondary);
  border-radius: var(--radius-md);
  color: var(--primary-color);
  font-size: 28rpx;
  font-weight: 600;
  min-width: 120rpx;
  text-align: center;
}

.divider {
  height: 1rpx;
  background: var(--border-light);
}

/* 订阅状态 */
.subscribe-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 0;
}

.subscribe-label {
  display: flex;
  align-items: center;
  gap: 16rpx;
  font-size: 28rpx;
  color: var(--text-primary);
}

.subscribe-icon {
  font-size: 32rpx;
}

.subscribe-status {
  font-size: 24rpx;
  color: var(--text-tertiary);
  padding: 8rpx 20rpx;
  background: var(--bg-secondary);
  border-radius: var(--radius-full);
}

.subscribe-status.active {
  color: #4CB8A5;
  background: rgba(76, 184, 165, 0.1);
}

.btn-manage {
  margin: 24rpx 0;
  padding: 24rpx 0;
  background: transparent;
  border: 2rpx solid var(--border-normal);
  border-radius: var(--radius-full);
  color: var(--text-primary);
  font-size: 28rpx;
  font-weight: 500;
}

/* 预览卡片 */
.preview-card {
  background: linear-gradient(135deg, #4CB8A5 0%, #3A9B8A 100%);
  border-radius: var(--radius-lg);
  padding: 32rpx;
  color: #fff;
  box-shadow: 0 8rpx 24rpx rgba(76, 184, 165, 0.3);
}

.preview-title {
  font-size: 28rpx;
  font-weight: 700;
  margin-bottom: 20rpx;
}

.preview-content {
  background: rgba(255, 255, 255, 0.2);
  border-radius: var(--radius-md);
  padding: 24rpx;
  margin-bottom: 20rpx;
}

.preview-row {
  font-size: 26rpx;
  line-height: 1.8;
  opacity: 0.95;
}

.preview-time {
  text-align: right;
  font-size: 24rpx;
  opacity: 0.8;
}

/* 使用说明 */
.tips-card {
  background: #FFF9E6;
  border-radius: var(--radius-lg);
  padding: 32rpx;
  margin-top: 40rpx;
  border: 2rpx solid #FFE4A3;
}

.tips-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #D97706;
  margin-bottom: 16rpx;
}

.tips-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.tip-item {
  font-size: 24rpx;
  color: #92400E;
  line-height: 1.6;
}

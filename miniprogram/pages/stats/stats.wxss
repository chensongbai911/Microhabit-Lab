/* 数据&我页样式 - Day 6 结论优先 */

.page-container {
  padding: 32rpx;
}

/* 主结论卡�?*/
.conclusion-card {
  background: linear-gradient(135deg, #07C160 0%, #059048 100%);
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  margin-bottom: 32rpx;
  color: white;
  box-shadow: 0 4rpx 24rpx rgba(76, 184, 165, 0.2);
}

.conclusion-header {
  display: flex;
  align-items: center;
  gap: 24rpx;
  margin-bottom: 32rpx;
}

.rate-emoji {
  font-size: 72rpx;
  line-height: 1;
}

.rate-main {
  flex: 1;
}

.rate-value {
  font-size: 64rpx;
  font-weight: 700;
  line-height: 1;
  margin-bottom: 8rpx;
}

.rate-label {
  font-size: 28rpx;
  opacity: 0.9;
}

.best-habit-section {
  margin-bottom: 24rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.2);
}

.section-label {
  font-size: 24rpx;
  opacity: 0.8;
  margin-bottom: 8rpx;
}

.best-habit-name {
  font-size: 36rpx;
  font-weight: 600;
}

.improvement-section {
  margin-bottom: 24rpx;
}

.improvement-tag {
  display: inline-block;
  background: rgba(255, 255, 255, 0.2);
  padding: 12rpx 20rpx;
  border-radius: 20rpx;
  font-size: 26rpx;
  font-weight: 500;
}

.advice-box {
  background: rgba(255, 255, 255, 0.15);
  padding: 24rpx;
  border-radius: 16rpx;
  line-height: 1.5;
}

.advice-text {
  font-size: 28rpx;
  font-weight: 500;
}

/* 统计数据卡片 */
.stats-cards {
  display: flex;
  gap: 20rpx;
  margin-bottom: 28rpx;
}

.stat-card {
  flex: 1;
  background: white;
  border-radius: 24rpx;
  padding: 24rpx 20rpx;
  text-align: center;
  box-shadow: 0 2rpx 16rpx rgba(15, 23, 42, 0.06);
  transition: all 0.3s;
}

.stat-card:active {
  transform: scale(0.98);
}

.stat-value {
  font-size: 40rpx;
  font-weight: 700;
  color: var(--primary-color);
  margin-bottom: 8rpx;
  line-height: 1;
}

.stat-label {
  font-size: 24rpx;
  color: var(--text-tertiary);
}

.member-card {
  background: linear-gradient(135deg, #07C160 0%, #059048 100%);
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  margin-bottom: 28rpx;
  color: white;
}

.member-title {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.member-desc {
  font-size: 28rpx;
  opacity: 0.9;
  margin-bottom: 24rpx;
}

.member-action {
  font-size: 28rpx;
  font-weight: 500;
}

.settings-list {
  background: white;
  border-radius: 24rpx;
  overflow: hidden;
}

.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid var(--border-light);
  font-size: 30rpx;
}

.setting-item:last-child {
  border-bottom: none;
}

.arrow {
  font-size: 48rpx;
  color: var(--text-tertiary);
}

.detail-item {
  background: #f7f8fa;
  border-radius: 16rpx;
  padding: 20rpx;
  text-align: center;
}

.detail-label {
  font-size: 24rpx;
  color: var(--text-tertiary);
  display: block;
  margin-bottom: 8rpx;
}

.detail-value {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--primary-color);
  display: block;
}

.progress-bar-detail {
  margin-bottom: 32rpx;
}

.bar-track-detail {
  width: 100%;
  height: 20rpx;
  background: #f0f2f5;
}

.detail-item {
  text-align: center;
}

.detail-label {
  font-size: 24rpx;
  color: var(--text-tertiary);
  margin-bottom: 8rpx;
}

.detail-value {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--primary-color);
}

.progress-bar-detail {
  margin-bottom: 24rpx;
}

.bar-track-detail {
  width: 100%;
  height: 20rpx;
  background: #f0f2f5;
  border-radius: 12rpx;
  overflow: hidden;
}

.bar-fill-detail {
  height: 100%;
  background: linear-gradient(135deg, #07C160 0%, #2AD47D 100%);
  border-radius: 12rpx;
  transition: width 0.3s ease;
}

.trend-modal .btn {
  width: 100%;
  margin-top: 16rpx;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

@keyframes slideIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

/* 图表卡片 - 7日完成率趋势 */
.chart-card {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx 28rpx;
  margin-bottom: 28rpx;
  box-shadow: 0 2rpx 16rpx rgba(15, 23, 42, 0.06);
}

.chart-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 32rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.chart-container {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.chart-bars {
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  height: 240rpx;
  gap: 16rpx;
  padding: 24rpx 12rpx 0 12rpx;
  border-bottom: 2rpx solid #f0f2f5;
  border-left: 2rpx solid #f0f2f5;
  overflow: hidden;
}

.bar-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  gap: 12rpx;
}

.bar-bar {
  width: 100%;
  background: linear-gradient(135deg, #07C160 0%, #2AD47D 100%);
  border-radius: 12rpx 12rpx 0 0;
  min-height: 20rpx;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 8rpx rgba(7, 193, 96, 0.2);
  position: relative;
}

.bar-bar::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 100%;
  background: linear-gradient(to bottom, rgba(255, 255, 255, 0.2), transparent);
  border-radius: 12rpx 12rpx 0 0;
}

.bar-label {
  font-size: 24rpx;
  color: var(--text-tertiary);
  font-weight: 500;
}

.bar-value {
  font-size: 22rpx;
  color: var(--text-secondary);
  font-weight: 600;
  color: #07C160;
}

/* 排名卡片 - Top 3 最佳习惯 */
.ranking-card {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx 28rpx;
  margin-bottom: 28rpx;
  box-shadow: 0 2rpx 16rpx rgba(15, 23, 42, 0.06);
}

.ranking-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.ranking-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.ranking-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx 24rpx;
  background: linear-gradient(135deg, rgba(7, 193, 96, 0.05) 0%, rgba(42, 212, 125, 0.05) 100%);
  border-radius: 16rpx;
  border-left: 4rpx solid #07C160;
  transition: all 0.3s ease;
}

.ranking-item:active {
  transform: translateX(4rpx);
  box-shadow: 0 2rpx 8rpx rgba(7, 193, 96, 0.15);
}

.medal-emoji {
  font-size: 48rpx;
  line-height: 1;
  min-width: 56rpx;
  text-align: center;
}

.ranking-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.ranking-name {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.ranking-rate {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.ranking-badge {
  background: linear-gradient(135deg, #07C160 0%, #059048 100%);
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  font-weight: 600;
  min-width: 72rpx;
  text-align: center;
}

.ranking-empty {
  text-align: center;
  padding: 60rpx 32rpx;
  color: var(--text-tertiary);
}

.ranking-empty-icon {
  font-size: 72rpx;
  margin-bottom: 16rpx;
  opacity: 0.5;
}

.ranking-empty-text {
  font-size: 28rpx;
}

/* 图表和排名的响应式调整 */
@media (max-width: 375px) {
  .chart-bars {
    height: 200rpx;
  }

  .bar-bar {
    min-height: 16rpx;
  }

  .bar-label {
    font-size: 20rpx;
  }
}


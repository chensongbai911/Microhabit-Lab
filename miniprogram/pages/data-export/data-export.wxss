/* 数据导出页面样式 */

.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
}

.page-content {
  padding: 32rpx 24rpx;
}

/* 头部 */
.header {
  margin-bottom: 48rpx;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  color: rgba(255, 255, 255, 0.98);
  margin-bottom: 12rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.subtitle {
  display: block;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 内容区 */
.content {
  padding: 24rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

/* 信息框 */
.info-box {
  padding: 16rpx;
  background: #f0f4ff;
  border-radius: 12rpx;
  border-left: 4rpx solid #667eea;
  margin-bottom: 24rpx;
}

.info-title {
  display: block;
  font-size: 26rpx;
  font-weight: 600;
  color: #667eea;
  margin-bottom: 8rpx;
}

.info-text {
  display: block;
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
}

/* 导出统计 */
.export-stats {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.stat-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 16rpx;
  background: #f9f9f9;
  border-radius: 12rpx;
  border-left: 4rpx solid #667eea;
}

.stat-icon {
  font-size: 40rpx;
}

.stat-content {
  flex: 1;
}

.stat-label {
  display: block;
  font-size: 22rpx;
  color: #999;
  margin-bottom: 4rpx;
}

.stat-value {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

/* 格式选择 */
.format-section {
  margin-bottom: 24rpx;
}

.section-title {
  display: block;
  font-size: 26rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}

.format-options {
  padding: 12rpx 0;
}

.radio-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 12rpx;
  margin-bottom: 8rpx;
  background: #f9f9f9;
  border-radius: 8rpx;
}

.radio-label {
  font-size: 24rpx;
  color: #333;
}

/* 数据预览 */
.preview-section {
  margin-bottom: 24rpx;
}

.data-preview {
  padding: 12rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  border: 1rpx solid #ddd;
  max-height: 200rpx;
  overflow-y: auto;
}

.preview-text {
  display: block;
  font-family: 'Monaco', 'Courier New', monospace;
  font-size: 18rpx;
  color: #666;
  line-height: 1.8;
  word-break: break-all;
}

/* 操作按钮 */
.action-section {
  margin-bottom: 24rpx;
}

.btn {
  width: 100%;
  padding: 14rpx 20rpx;
  border: none;
  border-radius: 10rpx;
  font-size: 26rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
  transition: all 0.3s ease;
}

.btn:last-child {
  margin-bottom: 0;
}

.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.btn-primary:active {
  transform: scale(0.98);
}

.btn-primary[disabled] {
  opacity: 0.6;
  background: #ccc;
}

.btn-secondary {
  background: linear-gradient(135deg, #FF6B9D 0%, #F093FB 100%);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 157, 0.3);
}

.btn-secondary:active {
  transform: scale(0.98);
}

.btn-outline {
  background: white;
  color: #667eea;
  border: 2rpx solid #667eea;
}

.btn-outline:active {
  background: #f9f9f9;
}

/* 提示 */
.tips {
  padding: 16rpx;
  background: #fff3e0;
  border-radius: 12rpx;
  border-left: 4rpx solid #FFA726;
}

.tips-title {
  display: block;
  font-size: 26rpx;
  font-weight: 600;
  color: #E65100;
  margin-bottom: 8rpx;
}

.tips-text {
  display: block;
  font-size: 22rpx;
  color: #E65100;
  line-height: 1.8;
  margin-bottom: 4rpx;
}

.tips-text:last-child {
  margin-bottom: 0;
}

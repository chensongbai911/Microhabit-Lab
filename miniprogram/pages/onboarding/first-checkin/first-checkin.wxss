.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  padding: 24rpx;
  display: flex;
  flex-direction: column;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 100vh;
}

.loading-text {
  font-size: 32rpx;
  color: #999;
}

.content {
  display: flex;
  flex-direction: column;
  flex: 1;
}

/* 顶部庆祝区域 */
.hero {
  margin-top: 32rpx;
  text-align: center;
  animation: slideDown 0.5s ease-out;
  padding: 0 12rpx;
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.emoji-large {
  font-size: 80rpx;
  display: block;
  margin-bottom: 20rpx;
  line-height: 1;
  animation: bounce 1s ease-in-out infinite;
}

@keyframes bounce {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-16rpx);
  }
}

.title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1F2937;
  line-height: 1.35;
  margin-bottom: 12rpx;
  word-break: break-word;
  letter-spacing: 0.5rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #6B7280;
  line-height: 1.5;
  font-weight: 400;
  word-break: break-word;
}

/* 习惯卡片 */
.habit-card {
  margin-top: 32rpx;
  padding: 24rpx 20rpx;
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  animation: slideUp 0.5s ease-out 0.2s both;
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.habit-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.habit-icon {
  font-size: 44rpx;
  line-height: 1;
  flex-shrink: 0;
}

.habit-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
  min-width: 0;
}

.habit-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #1F2937;
  line-height: 1.3;
  word-break: break-word;
}

.habit-trigger {
  font-size: 22rpx;
  color: #9CA3AF;
  line-height: 1.3;
  word-break: break-word;
}

.habit-meta {
  display: flex;
  gap: 16rpx;
  padding-top: 12rpx;
  border-top: 1rpx solid #F3F4F6;
}

.meta-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.meta-label {
  font-size: 20rpx;
  color: #D1D5DB;
  font-weight: 500;
}

.meta-value {
  font-size: 24rpx;
  color: #10B981;
  font-weight: 600;
}

/* 行动区域 */
.cta {
  margin-top: 48rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.checkin-btn {
  width: 280rpx;
  height: 88rpx;
  border-radius: 16rpx;
  background: linear-gradient(135deg, #FF6B6B 0%, #FF5252 100%);
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  box-shadow: 0 8rpx 16rpx rgba(255, 107, 107, 0.3);
  transition: all 0.3s ease;
  padding: 0;
  margin: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
}

.checkin-btn::after {
  border: none;
}

.checkin-btn:active {
  background: linear-gradient(135deg, #FF5252 0%, #FF4444 100%);
  transform: scale(0.95);
  box-shadow: 0 4rpx 8rpx rgba(255, 107, 107, 0.2);
}

.skip-hint {
  text-align: center;
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.45);
  font-weight: 400;
}

/* 提示区域 */
.tips {
  text-align: center;
  color: #6B7280;
  font-size: 24rpx;
  line-height: 1.6;
  margin-top: auto;
  padding-bottom: 20rpx;
  font-weight: 400;
  word-break: break-word;
}

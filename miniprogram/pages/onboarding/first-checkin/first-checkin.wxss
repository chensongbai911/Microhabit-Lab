.container { padding: 24rpx; }
.hero { margin-top: 80rpx; text-align: center; }
.title { font-size: 40rpx; font-weight: 700; color: #1F2937; }
.subtitle { margin-top: 16rpx; font-size: 28rpx; color: #6B7280; }
.cta { margin-top: 80rpx; display: flex; flex-direction: column; align-items: center; }
.checkin-btn { width: 70%; height: 96rpx; border-radius: 16rpx; background: #FF6B6B; color: #ffffff; font-size: 32rpx; font-weight: 600; }
.checkin-btn:active { background: #FF5252; transform: scale(0.98); }
.skip-hint { text-align: center; font-size: 24rpx; color: rgba(0, 0, 0, 0.35); margin-top: 16rpx; }
.tips { margin-top: 48rpx; text-align: center; color: #6B7280; font-size: 26rpx; }

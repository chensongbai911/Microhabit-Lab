/* 已删除习惯页面样式 */

.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
  padding: 24rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 400rpx;
  color: rgba(255, 255, 255, 0.9);
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.empty-hint {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}

/* 列表 */
.habits-list {
  padding: 16rpx 0;
}

.list-header {
  padding: 16rpx 20rpx;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 12rpx;
  margin-bottom: 16rpx;
  color: rgba(255, 255, 255, 0.9);
  font-size: 26rpx;
  font-weight: 600;
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

/* 卡片 */
.habit-card {
  background: rgba(255, 255, 255, 0.98);
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #eee;
}

.habit-title-section {
  display: flex;
  align-items: center;
  gap: 12rpx;
  flex: 1;
}

.habit-icon {
  font-size: 32rpx;
}

.habit-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  word-break: break-all;
}

.delete-time {
  font-size: 22rpx;
  color: #999;
  margin-left: 12rpx;
}

/* 恢复倒计时 */
.recovery-countdown {
  margin-bottom: 16rpx;
  padding: 12rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
}

.countdown-bar {
  height: 6rpx;
  background: #e0e0e0;
  border-radius: 3rpx;
  overflow: hidden;
  margin-bottom: 8rpx;
}

.countdown-fill {
  height: 100%;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
  transition: width 0.3s ease;
}

.countdown-text {
  display: block;
  font-size: 22rpx;
  color: #666;
  text-align: center;
}

/* 习惯信息 */
.habit-info {
  margin-bottom: 16rpx;
  padding: 12rpx;
  background: #f9f9f9;
  border-radius: 8rpx;
  border-left: 4rpx solid #667eea;
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
  font-size: 24rpx;
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-label {
  color: #999;
  min-width: 80rpx;
}

.info-value {
  color: #333;
  font-weight: 500;
  text-align: right;
  flex: 1;
}

/* 操作按钮 */
.actions {
  display: flex;
  gap: 12rpx;
}

.btn {
  flex: 1;
  padding: 12rpx 16rpx;
  border: none;
  border-radius: 8rpx;
  font-size: 24rpx;
  font-weight: 600;
  transition: all 0.3s ease;
  background: white;
  color: #333;
}

.btn-restore {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.btn-restore:active:not([disabled]) {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.btn-restore[disabled] {
  opacity: 0.5;
  background: #ccc;
}

.btn-delete {
  background: #FFE0E0;
  color: #EF5350;
  border: 1rpx solid #FFCDD2;
}

.btn-delete:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(239, 83, 80, 0.2);
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 400rpx;
  color: rgba(255, 255, 255, 0.9);
}

.spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top-color: white;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}
